<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.caminero.newton.ui.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_clientFragment"
            app:destination="@id/navClientFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/navClientFragment"
        android:name="com.caminero.newton.ui.fragment.ClientFragment"
        android:label="ClientFragment"
        tools:layout="@layout/fragment_client" >
        <action
            android:id="@+id/action_clientFragment_to_clientDetailFragment"
            app:destination="@id/navClientDetailFragment"/>
        <action
            android:id="@+id/action_clientFragment_to_addClientFragment"
            app:destination="@id/navAddClientFragment"/>
    </fragment>

    <fragment
        android:id="@+id/navAddClientFragment"
        android:name="com.caminero.newton.ui.fragment.AddClientFragment"
        android:label="AddClientFragment"
        tools:layout="@layout/fragment_add_client" >
    </fragment>

    <fragment
        android:id="@+id/navClientDetailFragment"
        android:name="com.caminero.newton.ui.fragment.ClientDetailFragment"
        android:label="ClientDetailFragment"
        tools:layout="@layout/fragment_client_detail" >
        <argument
            android:name="clientId"
            app:argType="string" />
        <action
            android:id="@+id/action_clientDetailFragment_to_loanFragment"
            app:destination="@id/navLoanFragment"/>
    </fragment>

    <fragment
        android:id="@+id/navLoanFragment"
        android:name="com.caminero.newton.ui.fragment.LoanFragment"
        android:label="LoanFragment"
        tools:layout="@layout/fragment_loan" >
        <argument
            android:name="clientId"
            app:argType="string" />
    </fragment>

</navigation>
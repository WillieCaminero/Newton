<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glTowQuater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />

            <ImageView
                android:id="@+id/imgPerson"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblId"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                tools:text="223-1233444-5"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/imgPerson"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/lblClientFullName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Willie Manuel Caminero Mejia"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/imgPerson"
                app:layout_constraintEnd_toStartOf="@id/glTowQuater"
                app:layout_constraintTop_toBottomOf="@id/lblId"/>

            <TextView
                android:id="@+id/lblActiveLoans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/active_loans"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@id/glTowQuater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lblNumberLoans"/>

            <TextView
                android:id="@+id/lblNumberLoans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                tools:text="15"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblActiveLoans"
                app:layout_constraintStart_toStartOf="@id/glTowQuater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
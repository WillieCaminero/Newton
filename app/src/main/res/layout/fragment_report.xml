<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lblReportDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:hintEnabled="true"
        android:hint="@string/hint_report_date"
        app:errorEnabled="true"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toEndOf="@id/glMiddle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtReportDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="date"
            android:paddingStart="10dp"
            android:paddingEnd="40dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hint_search"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="@id/glMiddle"
        app:layout_constraintEnd_toEndOf="@id/glEnd"
        app:layout_constraintBaseline_toBaselineOf="@id/lblReportDate"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnSearch"
        app:layout_constraintStart_toStartOf="@id/glStart"
        app:layout_constraintEnd_toEndOf="@id/glEnd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glLabelStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glValueStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.30" />

            <TextView
                android:id="@+id/lblTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_summary_account"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/lblPreviousBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_previous_base"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/lblTitle"
                app:layout_constraintStart_toStartOf="@id/glLabelStart"
                />

            <TextView
                android:id="@+id/txtPreviousBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 34,232"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/glValueStart"
                app:layout_constraintBaseline_toBaselineOf="@id/lblPreviousBase"
                />

            <TextView
                android:id="@+id/lblPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_paid"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblPreviousBase"
                app:layout_constraintStart_toStartOf="@id/glLabelStart"
                />

            <TextView
                android:id="@+id/txtPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 2,232"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/glValueStart"
                app:layout_constraintBaseline_toBaselineOf="@id/lblPaid"
                />

            <TextView
                android:id="@+id/lblSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_sale"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblPaid"
                app:layout_constraintStart_toStartOf="@id/glLabelStart"
                />

            <TextView
                android:id="@+id/txtSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 65,444"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/glValueStart"
                app:layout_constraintBaseline_toBaselineOf="@id/lblSale"
                />

            <TextView
                android:id="@+id/lblExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_expense"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/lblSale"
                app:layout_constraintStart_toStartOf="@id/glLabelStart"
                />

            <TextView
                android:id="@+id/txtExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 34.33"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/glValueStart"
                app:layout_constraintBaseline_toBaselineOf="@id/lblExpense"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_monetization_on_black_24dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/lblExpense"
                app:layout_constraintStart_toStartOf="@id/glLabelStart"
                />

            <TextView
                android:id="@+id/lblCurrentBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_current_base"
                android:textStyle="normal|bold"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/ivReport"
                app:layout_constraintTop_toTopOf="@id/ivReport"
                app:layout_constraintBottom_toBottomOf="@id/ivReport"
                />

            <TextView
                android:id="@+id/txtCurrentBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 34,422.33"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/lblCurrentBase"
                app:layout_constraintBaseline_toBaselineOf="@id/lblCurrentBase"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivDashboard"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dashboard"
                app:layout_constraintTop_toTopOf="@id/lblPreviousBase"
                app:layout_constraintBottom_toBottomOf="@id/lblExpense"
                app:layout_constraintStart_toStartOf="@id/glValueStart"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pvProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="4dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glMiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>
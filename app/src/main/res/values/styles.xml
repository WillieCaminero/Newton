<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit_text_enabled">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.17</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:background">@drawable/shape_edit_text_enabled</item>
    </style>

    <style name="label_white_bold_medium">
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.21</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
